<Window
    x:Class="Algoloop.Wpf.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding Title}"
    Width="300"
    VerticalAlignment="Top"
    Margin="40"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    DataContext="{Binding Source={StaticResource Locator}, Path=AboutViewModel}" >

    <StackPanel>
        <Label FontWeight="Bold" Content="{Binding ProductName}" />
        <Label FontWeight="Bold" Content="{Binding Version}" />
        <Label FontWeight="Bold" Content="{Binding Copyright}" />
        <TextBox
            Margin="10"
            Text="{Binding Description, Mode=OneWay}"
            TextWrapping="Wrap"
            IsReadOnly="True"
            Background="LightGray" />
        <Button
            IsDefault="True"
            MinWidth="60"
            Margin="10"
            Content="OK"
            HorizontalAlignment="Center"
            Click="OkClick"/>
    </StackPanel>
</Window>
